<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3E0808"
    tools:context=".Fundaciones.FundacionesActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="357dp"
        android:layout_height="604dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84000003">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:background="#4BDBB7">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="140dp"
                android:layout_height="115dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.753"
                app:srcCompat="@mipmap/banco_de_alimentos" />

            <TextView
                android:id="@+id/txtban_alimentos"
                android:layout_width="352dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="#008654DD"
                android:shadowColor="#BA1919"
                android:text="Banco de alimentos"
                android:textColor="#131313"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnDonarBA"
                android:layout_width="151dp"
                android:layout_height="37dp"
                android:layout_marginStart="28dp"
                android:text="Donar!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.992" />

            <TextView
                android:id="@+id/infoBA"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:text="Donaciones de alimentos aptos para el consumo humano o productos de aseo."
                android:textColor="#0B0A0A"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/btnDonarBA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btninfo1"
                android:layout_width="151dp"
                android:layout_height="39dp"
                android:layout_marginStart="28dp"
                android:text="ver mas info."
                app:layout_constraintBottom_toTopOf="@+id/btnDonarBA"
                app:layout_constraintStart_toEndOf="@+id/imageView5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame3"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:background="#F5EA14"
            android:backgroundTint="#F5EA14">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/imageFilterView3"
                android:layout_width="163dp"
                android:layout_height="72dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.614"
                app:srcCompat="@mipmap/danar_libros" />

            <Button
                android:id="@+id/btnDonarL"
                android:layout_width="151dp"
                android:layout_height="39dp"
                android:text="Donar!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.869"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.96" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fundacion Trilce"
                android:textColor="#050505"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/imageFilterView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.157" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="182dp"
                android:layout_height="60dp"
                android:layout_marginEnd="4dp"
                android:text="Donaciones de libros, papel, discos, cd´s y juguetes, instrumentos musicales, entre otros."
                android:textColor="#070707"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.301" />

            <Button
                android:id="@+id/btninfo2"
                android:layout_width="151dp"
                android:layout_height="41dp"
                android:layout_marginEnd="28dp"
                android:onClick="irAMasInfo"
                android:text="ver mas info."
                app:layout_constraintBottom_toTopOf="@+id/btnDonarL"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="11dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:background="#4BDBB7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/imageFilterView5"
                    android:layout_width="162dp"
                    android:layout_height="136dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.616"
                    app:srcCompat="@mipmap/banco_de_ropa" />

                <Button
                    android:id="@+id/btnDonarR"
                    android:layout_width="151dp"
                    android:layout_height="36dp"
                    android:text="donar!"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.857"
                    app:layout_constraintStart_toStartOf="@+id/imageFilterView5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.907" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banco de ropa Minuto de Dios"
                    android:textColor="#171616"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/imageFilterView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.432"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.461" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="145dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="28dp"
                    android:text="Donaciones de ropa en un buen estado."
                    android:textColor="#090909"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btninfo3"
                    android:layout_width="151dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="28dp"
                    android:onClick="irAMasInfo"
                    android:text="ver mas info."
                    app:layout_constraintBottom_toTopOf="@+id/btnDonarR"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="A qué fundacion quieres ayudar?"
        android:textColor="#0E0E0E"
        android:textColorHint="#0E0E0E"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>